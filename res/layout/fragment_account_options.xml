<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AccountOptionFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blury_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h3"

            android:drawableStart="@drawable/ic_kleine_shape"
            android:text="Timber Grove"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_100sdp"
            />


        <!-- middle text -->
        <TextView
            android:id="@+id/txt_middleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h3"

            android:layout_marginTop="@dimen/_10sdp"

            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:text="@string/rightAddress"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <!-- lower middle text -->
        <TextView
            android:id="@+id/txt_lower_middleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h2"

            app:layout_constraintStart_toStartOf="@id/txt_middleText"
            app:layout_constraintEnd_toEndOf="@id/txt_middleText"
            app:layout_constraintTop_toBottomOf="@id/txt_middleText"

            android:text="@string/quility"
            android:gravity="center"
            android:textSize="20sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_optionLogin"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            style="@style/StartblueButtonStyle"

            app:layout_constraintStart_toStartOf="@id/txt_lower_middleText"
            app:layout_constraintEnd_toEndOf="@+id/txt_lower_middleText"
            app:layout_constraintTop_toBottomOf="@+id/txt_lower_middleText"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="Login"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_optionRegister"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            style="@style/registerWhiteButtonStyle"

            app:layout_constraintTop_toBottomOf="@id/btn_optionLogin"
            app:layout_constraintStart_toStartOf="@id/btn_optionLogin"
            app:layout_constraintEnd_toEndOf="@id/btn_optionLogin"
            android:layout_marginTop="@dimen/_5sdp"

            android:text="Register"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
