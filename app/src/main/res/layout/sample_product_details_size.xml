<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:padding="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sample_txt_imageShadow"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:src="#B8D9FA"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sample_txtSize_imageColor"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:src="@color/g_gray500"
        app:layout_constraintStart_toStartOf="@id/sample_txt_imageShadow"
        app:layout_constraintTop_toTopOf="@id/sample_txt_imageShadow"
        app:layout_constraintEnd_toEndOf="@id/sample_txt_imageShadow"
        app:layout_constraintBottom_toBottomOf="@id/sample_txt_imageShadow"
        />

    <TextView
        android:id="@+id/sample_txt_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/sample_txtSize_imageColor"
        app:layout_constraintTop_toTopOf="@id/sample_txtSize_imageColor"
        app:layout_constraintEnd_toEndOf="@id/sample_txtSize_imageColor"
        app:layout_constraintBottom_toBottomOf="@id/sample_txtSize_imageColor"
        />

</androidx.constraintlayout.widget.ConstraintLayout>